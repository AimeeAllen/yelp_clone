%section.add_business
  .container
    .row
      .col-md-10.col-md-offset-1
        %form.form-horizontal
          %header.h1.col-md-offset-3
            Add a New Business
          %fieldset
            .form-group
              %label.control-label.col-sm-3 Business Name
              .col-sm-3
                %input.form-control(type="text")
            .form-group
              %label.control-label.col-sm-3 Description
              .col-sm-6
                %textarea.form-control(rows="8")

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Business" class="btn btn-default")