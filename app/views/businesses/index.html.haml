%article.business_list
  %header.business
    .container
      .row
        .col-sm-10.col-sm-offset-1
          %h1
            List of all Businesses:
            .pull-right
              = link_to "+ Add a New Business", new_business_path, class: 'btn btn-danger'
          %ul
            - @businesses.each do |business|
              %li.h3= link_to "#{business.name}", business_path(business.id)
